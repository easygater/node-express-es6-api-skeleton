{
  "name": "express-es6-api-skeleton",
  "version": "1.0.0",
  "main": "app.js",
  "description": "A simple skeleton for node-express api app.",
  "keywords": [
    "node",
    "express",
    "yarn",
    "api",
    "skeleton",
    "es6",
    "bcrypt",
    "jwt",
    "cookies"
  ],
  "author": "Attila Heged√ºs <easygater@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/easygater/node-express-es6-api-skeleton.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production && yarn server:prod",
    "server:prod": "node dist/app.js",
    "build": "babel app.js --out-dir build",
    "clean": "rimraf dist",
    "server": "cross-env DEBUG=app nodemon --exec babel-node app.js",
    "dev": "cross-env NODE_ENV=development npm-run-all server",
    "prod": "npm-run-all clean build"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.14",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
